(module test_server
  (import string_utils)
  
  (fn handle_connection client_sock string -> int
    (set request string (tcp_receive client_sock 4096))
    (set lines array (split request "\n"))
    (set line_count int (array_length lines))
    (set response string "HTTP/1.1 400 Bad Request\r\nContent-Length: 11\r\n\r\nBad Request")
    (if (gt line_count 0)
      (set first_line string (array_get lines 0))
      (set parts array (split first_line " "))
      (set part_count int (array_length parts))
      (if (gt part_count 1)
        (set path string (array_get parts 1))
        (set is_hello bool (string_equals path "/hello"))
        (if is_hello
          (set response string "HTTP/1.1 200 OK\r\nContent-Type: text/html\r\nContent-Length: 43\r\n\r\n<html><body>Hello from AISL</body></html>")
          (set response string "HTTP/1.1 404 Not Found\r\nContent-Length: 9\r\n\r\nNot Found"))))
    (set sent int (tcp_send client_sock response))
    (tcp_close client_sock)
    (ret 0))

  (fn start_server port int -> int
    (print "Starting test server...")
    (set server_sock string (tcp_listen port))
    (print "Listening on port 8080")
    (label accept_loop)
    (set client_sock string (tcp_accept server_sock))
    (handle_connection client_sock)
    (goto accept_loop)
    (ret 0))

  (fn main -> int
    (start_server 8080)
    (ret 0)))
