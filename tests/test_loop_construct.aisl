(mod test_loop
  (fn test_loop -> int
    (set count int 0)
    (loop
      (call print "In loop")
      (set count int (call add count 1))
      (if (call ge count 3)
        (break)))
    (ret count))

  (test-spec test_loop
    (case "infinite loop with manual exit"
      (input)
      (expect 3))))
