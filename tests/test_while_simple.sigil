(module test
  (fn count_up_to limit int -> int
    (set counter int 0)
    (if (lt counter limit)
      (set counter int (add counter 1)))
    (if (lt counter limit)
      (set counter int (add counter 1)))
    (if (lt counter limit)
      (set counter int (add counter 1)))
    (if (lt counter limit)
      (set counter int (add counter 1)))
    (if (lt counter limit)
      (set counter int (add counter 1)))
    (ret counter))
  
  (test-spec count_up_to
    (case "count to 5"
      (input 5)
      (expect 5))
    (case "count to 3"
      (input 3)
      (expect 3))
    (case "count to 0"
      (input 0)
      (expect 0)))
  
  (meta-note "Tests iterative counting using if statement pattern"))
