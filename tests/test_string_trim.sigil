(module test_trim
  (import string_utils)
  (fn do_trim text string -> string
    (ret (trim text)))
  
  (test-spec do_trim
    (case "trim both sides"
      (input "   hello world   ")
      (expect "hello world"))
    (case "trim leading only"
      (input "   leading")
      (expect "leading"))
    (case "trim trailing only"
      (input "trailing   ")
      (expect "trailing"))
    (case "no spaces to trim"
      (input "no-spaces")
      (expect "no-spaces"))
    (case "trim only spaces"
      (input "   ")
      (expect ""))
    (case "empty string"
      (input "")
      (expect "")))
  
  (meta-note "Tests trim for removing leading and trailing whitespace"))
