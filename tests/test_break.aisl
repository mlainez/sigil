(mod test_break
  (fn test_break_in_while -> int
    (set i int 0)
    (set sum int 0)
    (while (call lt i 100)
      (set sum int (call add sum i))
      (set i int (call add i 1))
      (set should_break bool (call eq i 5))
      (ifnot should_break skip_break)
      (break)
      (label skip_break))
    (ret sum))

  (test-spec test_break_in_while
    (case "break at i=5, sum should be 0+1+2+3+4=10"
      (input)
      (expect 10)))

  (fn test_break_in_loop -> int
    (set count int 0)
    (loop
      (set count int (call add count 1))
      (set should_break bool (call gt count 10))
      (ifnot should_break skip_break2)
      (break)
      (label skip_break2))
    (ret count))

  (test-spec test_break_in_loop
    (case "break when count > 10"
      (input)
      (expect 11))))
