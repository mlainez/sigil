(mod test_simple_break
  (fn test_simple () -> i32
    (set i i32 0)
    (loop
      (set i i32 (call add i 1))
      (set done bool (call eq i 3))
      (ifnot done skip)
      (break)
      (label skip))
    (ret i))

  (test-spec test_simple
    (case "break when i equals 3"
      (input)
      (expect 3))))
