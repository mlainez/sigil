(mod test_simple_break
  (fn test_simple -> int
    (set i int 0)
    (loop
      (set i int (call add i 1))
      (set done bool (call eq i 3))
      (ifnot done skip)
      (break)
      (label skip))
    (ret i))

  (test-spec test_simple
    (case "break when i equals 3"
      (input)
      (expect 3))))
