(module test_inline_validation
  (fn is_positive x int -> bool
    (ret (gt x 0)))
  
  (test-spec is_positive
    (case "returns true for positive numbers"
      (input 42)
      (expect true))
    (case "returns false for zero"
      (input 0)
      (expect false))
    (case "returns false for negative numbers"
      (input -5)
      (expect false)))
  
  (meta-note "Tests inline is_positive function without module imports"))
