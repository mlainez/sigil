(mod math
  (fn add a int b int -> int
    (ret (call add a b)))
  
  (test-spec add
    (case "basic addition"
      (input 10 32)
      (expect 42))
    (case "zero addition"
      (input 0 5)
      (expect 5))
    (case "negative addition"
      (input -10 5)
      (expect -5))
    (case "both negative"
      (input -10 -5)
      (expect -15)))
  
  (meta-note "Tests basic int addition operation using polymorphic add"))
