(mod test
  (fn increment_five_times start int -> int
    (set i int start)
    (set i int (call add i 1))
    (set i int (call add i 1))
    (set i int (call add i 1))
    (set i int (call add i 1))
    (set i int (call add i 1))
    (ret i))
  
  (test-spec increment_five_times
    (case "increment from 1"
      (input 1)
      (expect 6))
    (case "increment from 0"
      (input 0)
      (expect 5))
    (case "increment from 10"
      (input 10)
      (expect 15)))
  
  (meta-note "Tests repeated increment operations simulating while loop"))
