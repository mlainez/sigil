(module test_trim
  (import string_utils)
  (fn do_trim text string -> string
    (ret (trim text)))
  
  (test-spec do_trim
    (case "trim spaces both sides"
      (input "  hello  ")
      (expect "hello"))
    (case "trim leading only"
      (input "  world")
      (expect "world"))
    (case "trim trailing only"
      (input "test  ")
      (expect "test"))
    (case "no trim needed"
      (input "clean")
      (expect "clean")))
  
  (meta-note "Tests trim function"))
