(module test_argv

  (fn test_argv_count_no_args -> int
    (ret (argv_count)))

  (fn test_argv_empty -> int
    (set args array (argv))
    (ret (array_length args)))

  (test-spec test_argv_count_no_args
    (case "returns 0 when no extra args"
      (input)
      (expect 0)))

  (test-spec test_argv_empty
    (case "returns empty array when no extra args"
      (input)
      (expect 0)))

  (meta-note "Tests argv and argv_count builtins with no extra arguments"))
