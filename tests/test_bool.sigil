(module test_bool
  (fn return_true -> bool
    (ret true))
  
  (test-spec return_true
    (case "returns true"
      (input)
      (expect true)))
  
  (fn return_false -> bool
    (ret false))
  
  (test-spec return_false
    (case "returns false"
      (input)
      (expect false)))
  
  (fn identity_bool x bool -> bool
    (ret x))
  
  (test-spec identity_bool
    (case "identity true"
      (input true)
      (expect true))
    (case "identity false"
      (input false)
      (expect false)))
  
  (meta-note "Tests boolean values and boolean type handling"))
