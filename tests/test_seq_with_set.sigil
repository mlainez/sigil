(module test
  (fn increment_and_return counter int -> int
    (set new_counter int (add counter 1))
    (ret new_counter))
  
  (test-spec increment_and_return
    (case "increment 0"
      (input 0)
      (expect 1))
    (case "increment 5"
      (input 5)
      (expect 6))
    (case "increment 100"
      (input 100)
      (expect 101)))
  
  (meta-note "Tests sequence with variable assignment and return"))