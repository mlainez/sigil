(module test_decimal_simple
  (fn decimal_add_works -> bool
    (set a decimal (cast_int_decimal 10))
    (set b decimal (cast_int_decimal 5))
    (set result decimal (add a b))
    (set expected decimal (cast_int_decimal 15))
    (set matches bool (eq result expected))
    (ret matches))
  
  (test-spec decimal_add_works
    (case "10 + 5 equals 15"
      (input)
      (expect true)))
  
  (meta-note "Simple decimal addition test"))