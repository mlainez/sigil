(module test_simple_break
  (fn test_simple -> int
    (set i int 0)
    (loop
      (set i int (add i 1))
      (if (eq i 3)
        (break)))
    (ret i))

  (test-spec test_simple
    (case "break when i equals 3"
      (input)
      (expect 3)))
  
  (meta-note "Tests simple break statement in a while loop"))
