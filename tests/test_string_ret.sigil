(module test_string_ret
  (fn test_ret_string x int -> string
    (set is_neg bool (lt x 0))
    (if is_neg
      (ret "negative"))
    (ret "positive"))
  
  (test-spec test_ret_string
    (case "returns 'negative' for negative numbers"
      (input -5)
      (expect "negative"))
    (case "returns 'positive' for positive numbers"
      (input 10)
      (expect "positive"))
    (case "returns 'positive' for zero"
      (input 0)
      (expect "positive")))
  
  (meta-note "Tests conditional string returns - uses result variable pattern"))
