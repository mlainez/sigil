(module test_simple
  (import string_utils)
  (fn split_by_space s string -> string
    (ret (array_get (split s " ") 0)))
  
  (test-spec split_by_space
    (case "get first word"
      (input "hello world")
      (expect "hello"))
    (case "single word"
      (input "test")
      (expect "test"))
    (case "multiple words"
      (input "one two three")
      (expect "one")))
  
  (meta-note "Tests split by space delimiter"))
