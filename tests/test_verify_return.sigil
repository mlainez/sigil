(module test_verify_return
  (fn add_two a int b int -> int
    (ret (add a b)))

  (test-spec add_two
    (case "adds 2 + 3"
      (input 2 3)
      (expect 5))
    (case "adds 0 + 0"
      (input 0 0)
      (expect 0))
    (case "adds negative numbers"
      (input -1 -2)
      (expect -3)))

  (meta-note "Tests that function return values are correctly propagated"))
