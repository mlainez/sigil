(mod simple_tests

  (fn add ((a i32) (b i32)) -> i32
    (ret (call add a b)))
  
  (test-spec add
    (case "simple addition"
      (input 2 3)
      (expect 5))
    
    (case "zero addition"
      (input 0 5)
      (expect 5))
    
    (case "negative numbers"
      (input -2 3)
      (expect 1)))
  
  (meta-note "This is a simple test example")
  
  (fn multiply ((x i32) (y i32)) -> i32
    (ret (call mul x y)))
)
