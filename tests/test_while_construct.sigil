(module test_while
  (fn test_while -> int
    (set count int 0)
    (while (lt count 3)
      (print "In while loop")
      (set count int (add count 1)))
    (print "Done")
    (ret count))

  (test-spec test_while
    (case "while loop 3 iterations"
      (input)
      (expect 3)))
  
  (meta-note "Tests basic while loop with condition and iteration counter"))
