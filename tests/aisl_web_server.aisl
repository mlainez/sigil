(mod aisl_web_server
  (fn handle_request ((request string)) -> string
    (set is_json bool (call string_contains request "/hello.json"))
    (if is_json json_route)
    (set is_html bool (call string_contains request "/hello"))
    (if is_html html_route)
    (set not_found_response string "HTTP/1.1 404 Not Found\r\nContent-Type: text/html\r\nContent-Length: 49\r\n\r\n<html><body><h1>404 Not Found</h1></body></html>")
    (ret not_found_response)
    
    (label json_route)
    (set json_response string "{\"message\": \"Hello from AISL\"}")
    (set json_full string "HTTP/1.1 200 OK\r\nContent-Type: application/json\r\nContent-Length: 33\r\n\r\n{\"message\": \"Hello from AISL\"}")
    (ret json_full)
    
    (label html_route)
    (set html_response string "<html><body>Hello from AISL</body></html>")
    (set html_full string "HTTP/1.1 200 OK\r\nContent-Type: text/html\r\nContent-Length: 43\r\n\r\n<html><body>Hello from AISL</body></html>")
    (ret html_full))

  (fn handle_connection ((client_sock string)) -> i32
    (set request string (call tcp_receive client_sock 4096))
    (set response string (call handle_request request))
    (set sent i32 (call tcp_send client_sock response))
    (call tcp_close client_sock)
    (ret 0))

  (fn start_server ((port i32)) -> i32
    (call print "AISL Web Server")
    (set server_sock string (call tcp_listen port))
    (call print "Listening on port 8080")
    (label accept_loop)
    (set client_sock string (call tcp_accept server_sock))
    (call handle_connection client_sock)
    (goto accept_loop)
    (ret 0))

  (fn main () -> i32
    (call start_server 8080)
    (ret 0)))
