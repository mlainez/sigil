(module test_for_loop
  (fn sum_recursive start int end int -> int
    (if (ge start end)
      (ret 0))
    (set next int (add start 1))
    (set rest int (sum_recursive next end))
    (ret (add start rest)))
  
  (test-spec sum_recursive
    (case "sum 0 to 10"
      (input 0 10)
      (expect 45))
    (case "sum 1 to 5"
      (input 1 5)
      (expect 10))
    (case "sum 0 to 0"
      (input 0 0)
      (expect 0)))
  
  (meta-note "Tests for-loop-like behavior using recursive summation with if statements"))
