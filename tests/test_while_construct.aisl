(mod test_while
  (fn test_while () -> i32
    (set count i32 0)
    (while (call lt count 3)
      (call print "In while loop")
      (set count i32 (call add count 1)))
    (call print "Done")
    (ret count))

  (test-spec test_while
    (case "while loop 3 iterations"
      (input)
      (expect 3))))
