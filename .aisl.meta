@(meta-spec)
@(proj aisl ty:sys-lang principle:one-way-only)
@(stat tests:126 stdlib:13-modules examples:22)
@(impl ocaml tree-walking-interpreter no-bytecode direct-execution)
@(types
  (primitives int float bool string)
  (handles process socket file)
  (collections array map json)
  (special regex ws_socket channel))
@(stdlib
  (core arith cmp not bit cast)
  (string concat len split trim contains replace format find)
  (regex compile match find find_all replace)
  (array new push pop get set len slice)
  (map new get set has del keys vals)
  (io print println read file_read file_write)
  (net tcp http ws)
  (sys time sleep env exit process)
  (db sqlite))
@(special-forms
  (and "short-circuit boolean AND - e2 not evaluated if e1 is false")
  (or "short-circuit boolean OR - e2 not evaluated if e1 is true")
  (for-each "iterate array elements or map keys with type-checked binding"))
@(philosophy
  (no-backward-compat "llms-regenerate-dont-edit")
  (one-way-only "exactly-one-form-per-construct")
  (explicit-over-compact "clarity>brevity")
  (stdlib-first "check-before-assuming-missing")
  (aisl-only-tooling "NEVER use Python/Bash - ALWAYS use AISL for scripts")
  (fix-bugs-immediately "dont-workaround-fix-the-language")
  (document-discoveries "update-machine-readable-first"))
